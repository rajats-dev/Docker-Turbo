generator client {
  provider = "prisma-client"
  output   = "../generated/prismacreate-turbo@latest"
}

datasource db {
  provider = "postgresql"  
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  todos    Todo[]
}

model Todo {
  id     String  @id @default(uuid())
  task   String
  done   Boolean @default(false)
  userId String
  user   User    @relation(fields: [userId], references: [id])
}
